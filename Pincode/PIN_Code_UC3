//Restrict the PIN code from taking alphabets or special characters at the end. Check for 400088A â€“ this should fail

const pinCodePattern = /^[0-9]{6}$/;

function isValidPinCode(pinCode) {
    return pinCodePattern.test(pinCode);
}


console.log(isValidPinCode("400088"));  
console.log(isValidPinCode("40088A"));  
console.log(isValidPinCode("4000889")); 
